// Function to perform linear search on an array
function linearSearch(numbers, numbersSize, key) {
  // Initialize a variable for the loop counter
  let i = 0;

  // Iterate through the array until the end is reached
  while (i < numbersSize) {
    // Check if the current element is equal to the key
    if (numbers[i] == key) {
      // If found, return the index of the element
      return i;
    }

    // Move to the next element in the array
    i = i + 1;
  }
    
  // If the key is not found, return -1
  return -1;
}
